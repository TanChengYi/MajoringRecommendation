            android:id="@+id/q6">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/q6o1"
                android:text="A"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/q6o2"
                android:text="B"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/q6o3"
                android:text="C"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
